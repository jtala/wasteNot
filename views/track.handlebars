<button onclick="window.location.href = '/home';">Home</button>
<br><br>
<h2>Track Request</h2>
<hr>
<form id="trackingForm">
  <div class="form-group">
    <label for="trackingID">Your Tracking Number</label>
    <input type="text" name="request_id" id="trackingID" class="form-control">  
    <br><br>
    <button type = "submit" class = "btn btn-success submit"> Track!</button>
  </div>
</form> 

<script>
  $(document).ready(function() {
    // tracking ID input field
    var trackingID = $("#trackingID");
    // tracking ID form
    var trackingForm = $("#trackingForm");

  $(trackingForm).on("submit", trackID);

  function trackID(event) {
    // prevents page from reloading on submit
    event.preventDefault();
    // Values must be entered to submit
    if (!trackingID.val().trim()) {
      return;
    }

    var ID = trackingID.val().trim();

    console.log(ID);

    submitID(ID);
  };

  function submitID (post){
    $.post("/api/track", post, function() {
      console.log("ID tracking");
    });
  }
  });
</script>
